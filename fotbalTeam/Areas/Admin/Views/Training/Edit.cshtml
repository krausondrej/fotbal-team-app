@model fotbalTeam.Domain.Entities.Training

@{
    ViewData["Title"] = "Edit Training";
}

<h1>Edit Training</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="datetime-local" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" required />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
